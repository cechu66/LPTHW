#                print(host_name, ": ", host_ip)
#            except socket.error:
#                print(host_name, ": invalid url")
    get_url()
    for x in content:
        try:
            host_ip = socket.gethostbyname(x)
            print (x, ":    ", host_ip)
        except socket.error:
            print(x, ":url is invalid") 

def get_http_header():
    get_url()
    http = urllib3.PoolManager()	
    #print (url)
    for x in content:
        try:
            f = http.request('GET', x)
            #code = f.getcode()
            print (f.status)
        except:
            print ("")		
