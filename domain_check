import sys, socket, requests, urllib3

RED = '\033[0;31;47m'
BLUE = '\033[0;34;47m'
NORMAL = '\033[1;37;40m'

def get_url():
    global content
    with open("listurl.txt", "r") as inFile:
        #for line in inFile:
        url = inFile.readlines()
        content = [x.strip() for x in url]
        #print (content)
def get_Host_Name_IP():
#    with open("listurl.txt", "r") as inFile:
